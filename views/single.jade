extends ./layout.jade

block content
    .row
        .large-12.columns.single
            table(id='history', role='grid', summary='Search History')
              thead
                tr
                  th Date
                  th Sequence
                  th Depth
                  th Pages Searched
              tbody
                if search
                    tr
                        td(data-sort="#{moment(search.created_at).format('DD/MM/YYYY')}") #{moment(search.created_at).format('MMMM Do, YYYY')}
                        td
                             a(href='history/#{search.id}') #{search.body.replace(/,+/g, ' > ').replace(/[ ]*\/wiki\/[ ]*|[ ]+/g,' ').replace(/_+/g, ' ')}
                        td #{search.depth}
                        td #{search.pages_searched}
                else
                    tr
                        td Your search history is automatically saved and shown here...
                script.
                    var urls = !{JSON.stringify(search.urls).replace(/<\//g, "<\\/")}
            #results
